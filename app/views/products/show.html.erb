<div class="location">
	<a href="/" title="网站首页">首页</a><a href="/products" title="产品中心">产品中心</a><a href="<%= @product_catalog.show_url %>" title="<%= @product_catalog.name %>"><%= @product_catalog.name %></a><span><%= @product.title %></span>
</div>
<div class="clear"></div>
<div class="content_box">
	<div class="con_left">
		<div class="pro_pic">
			<div id="banner_pic">
				<a href="javascript:;" class="banner_img" title="ML80-侧面图" style="background:url(upload/productszu/51291211141542251_big.jpg) no-repeat center top;"></a>
				<a href="javascript:;" class="banner_img" title="ML-80打开图" style="background:url(upload/productszu/51291211141542252_big.jpg) no-repeat center top;"></a>
				<a href="javascript:;" class="banner_img" title="ML-80正面图" style="background:url(upload/productszu/51291211141542253_big.jpg) no-repeat center top;"></a>
				<a href="javascript:;" class="banner_img" title="ML-80细节图" style="background:url(upload/productszu/51291211141542254_big.jpg) no-repeat center top;"></a>
				<div class="banner_num">
					<a href="javascript:;"><img src="upload/productszu/51291211141542251_small.jpg" /></a>
					<a href="javascript:;"><img src="upload/productszu/51291211141542252_small.jpg" /></a>
					<a href="javascript:;"><img src="upload/productszu/51291211141542253_small.jpg" /></a>
					<a href="javascript:;"><img src="upload/productszu/51291211141542254_small.jpg" /></a>
				</div>
			</div>
		</div>
	</div>
	<div class="con_right">
		<div class="pro_show">
			<div class="title">
				<ul>
					<li class="curr">规格参数</li>
					<li>功能特点</li>
					<li>说明书下载</li>
				</ul>
			</div>
			<div class="pro_content">
				<div class="jScrollbar tab" id="jScroll">
					<div class="jScrollbar_mask">
						<!--规格-->
						<div class="guige">
							<ul>
								<li>
									<div class="label">
										型号：
									</div>
									<div class="cont">
										<%= @product.title %>
									</div>
								</li>
								<% if !@product.specifications.blank? %>
								<% @specifications = JSON.parse(@product.specifications) %>
								<% @specifications.each do |k, v| %>
								<li>
									<div class="label">
										<%= k %>：
									</div>
									<div class="cont">
										<%= v %>
									</div>
								</li>
								<% end %>
								<% end %>
							</ul>
						</div>
					</div>
					<div class="clear"></div>
				</div>
				<div class="jScrollbar tab" id="jScroll" style="z-index:-1">
					<div class="jScrollbar_mask">
						<!--功能参数-->
						<div class="gongneng">
							<ul>
								<% @product_features.each do |feature| %>
								<li>
									<div class="pic"><img src="<%= feature.img_url %>" />
									</div>
									<div>
										<%= feature.title %>：<%= feature.info %>
									</div>
								</li>
								<% end %>
							</ul>
						</div>
					</div>
					<div class="clear"></div>
				</div>
				<div class="down tab" style="z-index:-1;"></div>
			</div>
		</div>
	</div>
	<div class="clear"></div>
	<div class="pro_cookie mt20">
		<h2><a href="/clear_cookie/<%= @product.id %>" class="fr">清空浏览列表</a>您浏览过的产品列表</h2>
		<div class="contact">
			<a href="/shop" class="buy"></a>
			<a target="_blank" href="http://amos.alicdn.com/msg.aw?v=2&uid=%E4%B8%8A%E6%B5%B7%E6%96%8C%E6%B4%81%E5%95%86%E8%B4%B8&site=cntaobao&s=1&charset=utf-8" class="lx"></a>
		</div>
		<ul>
			<% session[:products].each_with_index do |product_id, i| %>
			<% product = Product.find(product_id) %>
			<li<% if (i+1) % 3 == 0 %> class="last"<% end%>>
				<a href="<%= product.show_url %>" class="pic" title="<%= product.title %>"><img src="<%= product.cover %>" alt="<%= product.title %>"/></a>
			</li>
			<% end %>
		</ul>
	</div>
</div>
<script type="text/javascript" src="/assets/jquery.soChange.js"></script>
<script type="text/javascript" src="/assets/jScrollbar.jquery.js"></script>
<script type="text/javascript">
$(function(){
	//TAB切换
	$("div.pro_show .title li").hover(function(){
		$("div.pro_show .title li").removeClass("curr");
		$("div.pro_content .tab").css('z-index', '-1');
		$(this).addClass("curr");
		$("div.pro_content .tab:eq("+$(this).index()+")").css('z-index', '10');
	});
	
	//滚动条
	$('.jScrollbar').jscroll({
		W: "5px"//设置滚动条宽度
		, Bg: "#f1f1f1"
		, Bar: {
			Bd: {
				Out: "#909090",
				Hover: '#909090'
			}
			, Bg: {
				Out: "#909090",
				Hover: "#909090",
				Focus: "#909090"
			}
		}//设置滚动条滚轴背景：鼠标离开(默认)，经过，点击
		, Btn: {
			btn:false
		}
		, Fn: function(){}//滚动时候触发的方法
	});
});
</script>
