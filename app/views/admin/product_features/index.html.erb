<div class="nav">
	<div class="list-opts">
		<div class="nav-links">
			<a href="/admin/products/<%= @product.id %>/product_features"><%= @product.title %> 功能特点</a>
			<a href="/admin/products/<%= @product.id %>/product_features/new">添加功能特点</a>
		</div>
	</div>
</div>
<div class="main">
<table class="stdtable">
	<thead>
		<tr>
			<th width="5%">ID</th>
			<th width="15%">图片</th>
			<th width="15%">标题</th>
			<th>内容</th>
			<th width="20%">管理</th>
		</tr>
	</thead>
	<tbody>
	<%
		if @product_features.length>0
			@product_features.each_with_index do |product_feature, i|
	%>
		<tr>
			<td><%= i + 1 %></td>
			<td><img src="<%= product_feature.img_url %>" /></td>
			<td><%= product_feature.title.gsub('$$$', "<br />").html_safe %></td>
			<td style="text-align:left;"><%= product_feature.info.gsub('$$$', "<br />").html_safe %></td>
			<td>				
				<a href="/admin/products/<%= @product.id %>/product_features/<%= product_feature.id %>/edit">修改</a>|<%= link_to "删除", {:action => "destroy", :id => product_feature}, :confirm => "确定删除？", :method => "delete" %>
			</td>
		</tr>
	<%
			end
		else
	%>
		<tr>
			<td colspan="5" style="text-align:left;">&nbsp;还没有内容。</td>
		</tr>
	<%
		end
	%>
	</tbody>
</table>
</div>