<%= form_tag :action => "flashpics" do %>	
<table class="setTable">
	<thead>
		<tr>
			<th colspan="2">首页图片轮播</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td colspan="2" class="blank"></td>
		</tr>
		<tr>
			<td>
				图片地址：
				<input type="text" name="sys_setting[setting][img_url][0]" value="<%= @setting["img_url"][0] if @setting["img_url"] %>" class="new_ipt" />
			</td>
			<td>
				链接地址：
				<input type="text" name="sys_setting[setting][link_url][0]" value="<%= @setting["link_url"][0] if @setting["link_url"] %>" class="new_ipt" />	
			</td>
		</tr>
		<tr>
			<td>
				图片地址：
				<input type="text" name="sys_setting[setting][img_url][1]" value="<%= @setting["img_url"][1] if @setting["img_url"] %>" class="new_ipt" />
			</td>
			<td>
				链接地址：
				<input type="text" name="sys_setting[setting][link_url][1]" value="<%= @setting["link_url"][1] if @setting["link_url"] %>" class="new_ipt" />	
			</td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td class="data_sbt">
				<input type="submit" name="submit" value="确定" />
			</td>
		</tr>
		<% if !@result.nil? %>
		<tr>
			<td colspan="2" class="blank"></td>
		</tr>
		<tr>
			<td class="data_label">result：</td>
			<td class="data_result">保存成功。</td>
		</tr>
		<% end %>
		<tr>
			<td colspan="2" class="blank"></td>
		</tr>
	</tbody>
</table>
<% end %>