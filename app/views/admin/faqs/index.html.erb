<div class="nav">
	<div class="list-opts">
		<div class="nav-links">
			<a href="/admin/faqs">产品知识</a>
			<a href="/admin/faqs/new">添加 产品知识</a>
		</div>
	</div>
</div>
<div class="main">
<table class="stdtable edtable">
	<thead>
		<tr>
			<th width="10%">编号</th>
			<th>标题</th>
			<th width="30%">管理</th>
		</tr>
	</thead>
	<tbody>
	<%
		if @faqs.length>0
			@faqs.each do |faq|
	%>
		<tr>
			<td><%= faq.id %></td>
			<td><%= faq.title %></td>
			<td>
				<a href="/admin/faqs/<%= faq.id %>/edit">修改</a>|<%= link_to "删除", {:action => "destroy", :id => faq}, :confirm => "确定删除？", :method => "delete" %>
			</td>
		</tr>
	<%
			end
		else
	%>
		<tr>
			<td colspan="3" style="text-align:left;">&nbsp;还没有内容。</td>
		</tr>
	<%
		end
	%>
	</tbody>
</table>
</div>