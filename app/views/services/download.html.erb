<!--图片弹出切换开始-->
<link rel="stylesheet" type="text/css" href="/assets/fancybox/jquery.fancybox-1.3.4.css">
<script type="text/javascript" src="/assets/fancybox/jquery.mousewheel-3.0.4.pack.js"></script>
<script type="text/javascript" src="/assets/fancybox/jquery.fancybox-1.3.4.pack.js"></script>
<!--图片弹出切换结束-->
<script type="text/javascript">
	$(document).ready(function() {
		//图片点击弹出
		$("#cal_pic a[rel=cal_pic]").fancybox({
			'transitionIn' : 'elastic',
			'transitionOut' : 'elastic',
			'titlePosition' : 'over',
			'titleFormat' : function(title, currentArray, currentIndex, currentOpts) {
				return '<span id="fancybox-title-over">Image ' + (currentIndex + 1) + ' / ' + currentArray.length + (title.length ? ' &nbsp; ' + title : '') + '</span>';
			}
		});
	});

</script>
<div class="location">
	<a href="/"><%= _t "location.index" %></a><a href="/service"><%= _t "location.service" %></a><span><%= _t "location.downloads" %></span>
</div>
<div class="clear"></div>
<div class="content_box faq">
	<div class="ser_action">
		<div class="faq_title">
			<h1><%= _t "location.downloads" %></h1>
		</div>
		<div class="down_list">
			<div class="down_title">
				<% @product_catalogs.each do |catalog| %>
				<dl>
					<dt><%= catalog.name %>：</dt>
					<dd>
						<% catalog.products.each do |product| %>
						<a href="/download/<%= product.id %>"<% if product.id == @product.id %> class="curr"<% end %>><%= product.title %></a>
						<% end %>
					</dd>
				</dl>
				<% end %>
			</div>
			<div class="down_pic">
				<h2>产品图片集锦</h2>
				<div id="cal_pic">
					<% @product_imgs.each_with_index do |product_img, i| %>
					<a href="<%= product_img.addr %>" rel="cal_pic" title="<%= product_img.title %>"<% if (i + 1) % 4 == 0 %> class="last"<% end %>><img src="<%= product_img.addr %>"/></a>
					<% end %>
				</div>
			</div>
			<div class="down_pdf">
				<h2>产品图纸</h2>
				<% if @product_drawings.length > 0 %>
				<% @product_drawings.each do |f| %>
				<a href="<%= f.data_url %>" target="_blank" class="download"><%= f.title %></a>
				<% end %>
				<% else %>
				<img src="/assets/qidai_1.png" class="mt10"/>
				<% end %>
			</div>
			<div class="down_pdf">
				<h2>说明书</h2>
				<% if @product_docs.length > 0 %>
				<% @product_docs.each do |f| %>
				<a href="<%= f.data_url %>" target="_blank" class="download"><%= f.title %></a>
				<% end %>
				<% else %>
				<img src="/assets/qidai_2.png" class="mt10"/>
				<% end %>
			</div>
		</div>
	</div>
</div>
